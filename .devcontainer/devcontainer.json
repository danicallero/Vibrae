{
  "name": "Vibrae Dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers-contrib/features/age:1": {}
  },
  "postCreateCommand": "pip install -r requirements.txt && pip install ruff pre-commit && pre-commit install",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "github.vscode-github-actions",
        "charliermarsh.ruff"
      ]
    }
  },
  "remoteEnv": {
    "PYTHONPATH": "/workspaces/vibrae:/workspaces/vibrae/apps/api/src"
  }
}
